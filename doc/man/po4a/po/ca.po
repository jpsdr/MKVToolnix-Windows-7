"&lt;!DOCTYPE Chapters SYSTEM &quot;matroskachapters.dtd&quot;&gt;\n"
"&lt;Chapters&gt;\n"
"  &lt;EditionEntry&gt;\n"
"    &lt;ChapterAtom&gt;\n"
