#: doc/man/mkvextract.xml:607
msgid "These will be extracted to raw <abbrev>DTS</abbrev> files."
msgstr "Aquests s'extrauran als fitxers <abbrev>DTS</abbrev> en RAW."

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><term>
#: doc/man/mkvextract.xml:613
msgid "A_FLAC"
msgstr "A_FLAC"

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><listitem><para>
#: doc/man/mkvextract.xml:616
msgid "<abbrev>FLAC</abbrev> tracks are written to raw <abbrev>FLAC</abbrev> files."
msgstr "Les pistes <abbrev>FLAC</abbrev> s'escriuran en fitxers <abbrev>FLAC</abbrev> en RAW."

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><term>
#: doc/man/mkvextract.xml:622
