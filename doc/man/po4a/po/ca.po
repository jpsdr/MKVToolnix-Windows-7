msgstr "S_TEXT/WEBVTT"

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><listitem><para>
#: doc/man/mkvextract.xml:773
msgid "<abbrev>WebVTT</abbrev> text subtitles will be written as <abbrev>WebVTT</abbrev> files."
msgstr "Els subtítols <abbrev>WebVTT</abbrev> s'escriuran com a fitxers <abbrev>WebVTT</abbrev>."

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><term>
#: doc/man/mkvextract.xml:779
msgid "V_MPEG1, V_MPEG2"
msgstr "V_MPEG1, V_MPEG2"

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><listitem><para>
#: doc/man/mkvextract.xml:782
msgid "<abbrev>MPEG-1</abbrev> and <abbrev>MPEG-2</abbrev> video tracks will be written as <abbrev>MPEG</abbrev> elementary streams."
msgstr "Les pistes de vídeo <abbrev>MPEG-1</abbrev> i <abbrev>MPEG-2</abbrev> s'escriuran com a fluxos elementals <abbrev>MPEG</abbrev>."

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><term>
#: doc/man/mkvextract.xml:788
msgid "V_MPEG4/ISO/AVC"
msgstr "V_MPEG4/ISO/AVC"

#. type: Content of: <refentry><refsect1><variablelist><varlistentry><listitem><para>
#: doc/man/mkvextract.xml:791
